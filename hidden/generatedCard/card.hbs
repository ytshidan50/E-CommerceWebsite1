<div class="col-md-4 col-lg-3 mb-4">
                <div class="card product-card h-100">
                    <div class="position-relative"> <!-- Product image with badge and wishlist button -->
                        <img src="{{this.image}}" class="product-img"
                            alt="Product Image">
                        <span class="product-badge">-20%</span>
                        <button class="wishlist-btn">
                            <i class="bi bi-heart"></i>
                        </button>
                    </div>
                    <div class="card-body"> <!-- Product details -->
                        <h5 class="card-title">{{this.name}}</h5>
                        <div class="d-flex align-items-center mb-2"> <!-- Price section -->
                            <span class="discount-price">{{this.rate}}</span>
                            <span class="original-price ms-2">$99.99</span>
                        </div>
                        <div class="divider"></div> <!-- Divider -->
                        <p class="card-text text-muted small"> <!-- Description -->
                            {{this.description}}
                        </p>
                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <!-- Rating and action button -->
                            <div class="rating">
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-half"></i>
                                <span class="text-muted small ms-1">(128)</span>
                            </div>
                            <button class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-cart-plus"></i> Add
                            </button>
                        </div>
                    </div>
                </div>
            </div>