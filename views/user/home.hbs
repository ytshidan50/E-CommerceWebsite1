<section class="pt-5">
    <div class="container-fluid">
        <div class="row justify-content-center gap-2">
            {{#each products}}
            <div class="card bg-body-secondary text-body" style="width: 18rem;">
                <img src="/productImages/{{this._id}}.png" class="card-img-top" alt="{{this.name}}">
                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <h6>{{this.rate}}</h6>
                    <hr>
                    <p class="card-text">{{this.description}}</p>
                    {{#if (includes @root.cart.productIds this._id)}}
                    <button class="btn btn-success btn-sm" disabled>In Cart</button>
                    {{else}}
                    <button class="btn btn-primary btn-sm" id="cartBtn-{{this._id}}"
                        onclick="addToCart('{{this._id}}','{{this.name}}','{{@root.req.session.loggedIn}}')">
                        Add to cart
                    </button>
                    {{/if}}
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>