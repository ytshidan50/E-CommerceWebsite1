{{#if (gte order.products.length 1)}}
<section class="mt-4">
    <div class="container-fluid">

        <!-- Page Title -->
        <div class="row mb-4">
            <div class="col-12 text-center">
                <h1 class="fw-bold">Order Details</h1>
                <hr class="border-primary border-2 w-25 mx-auto">
            </div>
        </div>

        <!-- Delivery & Summary -->
        <div class="row mb-4 d-flex justify-content-center">
            <div class="col-md-4 col-sm-6 g-4">
                <div class="card bg-body-secondary text-body">
                    <div class="card-header">Delivery Details</div>
                    <div class="card-body">
                        <p><strong>Mobile:</strong> {{order.deliveryDetails.mobile}}</p>
                        <p><strong>Address:</strong> {{order.deliveryDetails.address}}</p>
                        <p><strong>Pin Code:</strong> {{order.deliveryDetails.pinCode}}</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-sm-6 g-4">
                <div class="card bg-body-secondary text-body">
                    <div class="card-header">Order Info</div>
                    <div class="card-body">
                        <p><strong>Ordered On:</strong> {{formatDate order.times.ordered}}</p>
                        {{#if (cond order.status '==' 'pending')}}
                        <p><strong>Status:</strong>
                            <span class="badge bg-warning text-dark">Payment Pending</span>
                        </p>
                        <button class="btn btn-success btn-sm mb-2" onclick="continuePayment({{json order}})">Make
                            Payment</button>
                        {{else}}
                        <p><strong>Status:</strong>
                            <span class="badge 
                                {{#if (cond order.status '===' 'placed')}}bg-primary{{/if}}
                                {{#if (cond order.status '===' 'shipped')}}bg-info{{/if}}
                                {{#if (cond order.status '===' 'delivered')}}bg-success{{/if}}
                                {{#if (cond order.status '===' 'returned')}}bg-danger{{/if}}
                                {{#if (cond order.status '===' 'cancelled')}}bg-dark{{/if}}">
                                {{order.status}}
                            </span>
                        </p>
                        {{/if}}
                        <p><strong>Payment Method:</strong> {{order.payment.method}}</p>
                    </div>
                </div>
            </div>

        </div>

        <!-- Product Table -->
        <div class="mb-4">
            <div class="card bg-body-secondary text-body">
                <div class="card-header">Products:</div>
                <div class="card-body table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-body-tertiary text-body-secondary">
                            <tr>
                                <th>#</th>
                                <th>Product</th>
                                <th>Rate</th>
                                <th>Qty</th>
                                <th>Sub Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each order.products}}
                            <tr>
                                <td>{{add @index 1}}</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="/productImages/{{this._id}}.png" alt="" class="rounded me-3"
                                            style="width:3em;">
                                        <div>
                                            <strong>{{this.name}}</strong><br>
                                            <small class="text-body-secondary">{{this.description}}</small>
                                        </div>
                                    </div>
                                </td>
                                <td>₹{{this.rate}}</td>
                                <td>{{this.quantity}}</td>
                                <td>₹{{mul this.rate this.quantity}}</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Order Summary -->
        <div class="row mb-4 d-flex justify-content-between">
            <div class="col-md-8 col-sm-12 g-4">
                <div class="">
                    <div class="d-flex text-center">
                        <div style="width: 12%;" class=" ">
                            <div></div>
                        </div>
                        <div style="width: 22%;" class=" ">
                            <i class="bi bi-bag-fill fs-3 {{#if order.times.ordered}} text-warning
                                {{else}}text-secondary{{/if}}"></i>
                            <div>Ordered</div>
                        </div>
                        <div style="width: 22%;" class=" ">
                            <i class="bi bi-person-check-fill fs-3 {{#if order.times.confirmed}}text-primary
                                {{else}}text-secondary{{/if}}"></i>
                            <div>Confirmed</div>
                        </div>
                        <div style="width: 22%;" class=" ">
                            <i class="bi bi-truck fs-3 {{#if order.times.shipped}}text-info
                                {{else}}text-secondary{{/if}}"></i>
                            <div>Shipped</div>
                        </div>
                        <div style="width: 22%;" class=" ">
                            <i class="bi bi-box-seam-fill fs-3 {{#if order.times.delivered}}text-success
                                {{else}}text-secondary{{/if}}"></i>
                            <div>Delivered</div>
                        </div>
                    </div>
                    <div class="mt-2 position-relative">
                        <div class="progress" role="progressbar" aria-label=""
                            style=" height:0.5em; position:absolute; left:0; right:0; ">
                            <div class="progress-bar {{#if order.times.delivered}}{{else}}progress-bar-striped progress-bar-animated{{/if}} bg-success"
                                style="width: 
                                {{#if order.times.delivered}}100%
                                {{else if order.times.shipped}}67%
                                {{else if order.times.confirmed}}45%
                                {{else if order.times.ordered}}23%
                                {{else}}6%{{/if}}">
                            </div>
                        </div>
                        <div style="position: absolute; top:-0.33em;
                         left: calc({{#if order.times.delivered}}89%
                                    {{else if order.times.shipped}}67%
                                    {{else if order.times.confirmed}}45%
                                    {{else if order.times.ordered}}23%
                                    {{else}}6%{{/if}} - 0.7em);">
                            <span><i class="fa-solid fa-cart-shopping text-success-emphasis fs-4"></i></span>
                        </div>
                    </div>
                    <div class=" mt-4 d-flex text-center">
                        <div style="width: 12%;">
                            <div> </div>
                        </div>
                        <div style="width: 22%;">
                            <div><span class="text-warning-emphasis">{{formatDateShort order.times.ordered}}</span>
                            </div>
                        </div>
                        <div style="width: 22%;">
                            <div><span class="text-primary-emphasis">{{formatDateShort order.times.confirmed}}</span>
                            </div>
                        </div>
                        <div style="width: 22%;">
                            <div><span class="text-info-emphasis">{{formatDateShort order.times.shipped}}</span></div>
                        </div>
                        <div style="width: 22%;">
                            <div><span class="text-success-emphasis">{{formatDateShort order.times.delivered}}</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-sm-12 g-4">
                <div class="card bg-body-secondary text-body">
                    <div class="card-header">Order Summary</div>
                    <div class="card-body">
                        <p><strong>Total Items:</strong> {{order.totalItems}}</p>
                        <p><strong>Subtotal:</strong> ₹{{order.total}}</p>
                        <p><strong>Delivery Fee:</strong> ₹0<span class="badge bg-success ms-2">Free Delivery</span></p>
                        <hr>
                        <p class="fs-5"><strong>Grand Total:</strong> ₹{{order.total}}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

{{else}}
<div class="container my-5">
    <div class="alert alert-warning text-center">
        <h4>Unable to verify the order!</h4>
        <p><a href="/orders" class="link-primary">Go to your orders</a></p>
    </div>
</div>
{{/if}}

<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
<script src="/javascripts/payment.js"></script>