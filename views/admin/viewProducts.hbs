<section class="mt-5">
    <div class="container-fluid">
        <!-- Page Header -->
        <div class="row mb-4 align-items-center">
            <div class="col-8">
                <h2 class="mb-0">Product Management</h2>
                <p class="text-body-secondary mb-0">Manage your product inventory and details</p>
            </div>
            <div class="col-4 d-flex justify-content-end gap-2">
                <button class="btn btn-outline-secondary btn-sm" onclick="window.print()">
                    <i class="bi bi-printer"></i> Print
                </button>
                <button class="btn btn-outline-primary btn-sm" onclick="exportProducts()">
                    <i class="bi bi-download"></i> Export
                </button>
                <a href="/admin/add-product" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Add Product
                </a>
            </div>
        </div>

        <!-- Stats Cards -->
        <div class="row mb-4">
            <div class="col-md-3 col-sm-6 mb-3">
                <div class="card bg-primary-subtle text-primary-emphasis">
                    <div class="card-body d-flex align-items-center">
                        <div class="me-3">
                            <i class="bi bi-box-seam fs-1"></i>
                        </div>
                        <div>
                            <h5 class="mb-0">{{products.length}}</h5>
                            <small>Total Products</small>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-3">
                <div class="card bg-success-subtle text-success-emphasis">
                    <div class="card-body d-flex align-items-center">
                        <div class="me-3">
                            <i class="bi bi-check-circle fs-1"></i>
                        </div>
                        <div>
                            <h5 class="mb-0">{{products.length}}</h5>
                            <small>Active Products</small>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-3">
                <div class="card bg-warning-subtle text-warning-emphasis">
                    <div class="card-body d-flex align-items-center">
                        <div class="me-3">
                            <i class="bi bi-exclamation-triangle fs-1"></i>
                        </div>
                        <div>
                            <h5 class="mb-0">0</h5>
                            <small>Low Stock</small>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-3">
                <div class="card bg-info-subtle text-info-emphasis">
                    <div class="card-body d-flex align-items-center">
                        <div class="me-3">
                            <i class="bi bi-tags fs-1"></i>
                        </div>
                        <div>
                            <h5 class="mb-0" id="productCategoryCount">0</h5>
                            <small>Categories</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Filters and Search -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card bg-body-secondary">
                    <div class="card-body">
                        <div class="row g-3 align-items-center">
                            <div class="col-md-6">
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                                    <input type="text" class="form-control" id="searchProducts"
                                        placeholder="Search products by name, description, or category...">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <select class="form-select" id="categoryFilter">
                                    <option value="">All Categories</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <button class="btn btn-outline-secondary w-100" onclick="clearFilters()">
                                    <i class="bi bi-x-circle"></i> Clear Filters
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Products Table -->
        <div class="row">
            <div class="col-12">
                <div class="card bg-body-secondary">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Products Inventory</h5>
                        <small class="text-body-secondary">{{products.length}} total products</small>
                    </div>
                    <div class="card-body table-responsive">
                        <table class="table table-hover align-middle datatable" id="productsTable">
                            <thead class="table-body-tertiary text-body-secondary">
                                <tr>
                                    <th>#</th>
                                    <th>Product</th>
                                    <th>Category</th>
                                    <th>Price</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each products}}
                                <tr id="productRow-{{this._id}}">
                                    <td>{{add @index 1}}</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <img src="/productImages/{{this._id}}.png" alt="{{this.name}}"
                                                class="rounded me-3"
                                                style="width: 3.5rem; height: 3.5rem; object-fit: cover;" >
                                            <div>
                                                <strong>{{this.name}}</strong><br>
                                                <small class="text-body-secondary"> {{this.description}} </small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary product-category">{{this.category}}</span>
                                    </td>
                                    <td>
                                        <strong class="text-success">â‚¹{{this.rate}}</strong>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="/admin/edit-product/{{this._id}}" class="btn btn-sm btn-primary">
                                                <i class="bi bi-pencil"></i> Edit
                                            </a>
                                            <button class="btn btn-sm btn-danger"
                                                onclick="deleteProduct('{{this._id}}','{{this.name}}')">
                                                <i class="bi bi-trash"></i> Delete</button>
                                        </div>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    // Initialize on page load
    document.addEventListener('DOMContentLoaded', function () {
        populateCategoryFilter();
        const nodeList = document.querySelectorAll('.product-category')
        const count = new Set(Array.from(nodeList).map(category => category.textContent.trim()))
        document.getElementById('productCategoryCount').textContent = count.size
    });

    // Search functionality
    document.getElementById('searchProducts').addEventListener('input', function () {
        const searchTerm = this.value.toLowerCase();
        const rows = document.querySelectorAll('#productsTable tbody tr');

        rows.forEach(row => {
            const productName = row.querySelector('strong').textContent.toLowerCase();
            const productDescription = row.querySelector('small').textContent.toLowerCase();
            const productCategory = row.querySelector('.badge').textContent.toLowerCase();
            const isMatch = productName.includes(searchTerm) ||
                productDescription.includes(searchTerm) ||
                productCategory.includes(searchTerm);
            row.style.display = isMatch ? '' : 'none';
        });
    });

    // Category filter functionality
    function populateCategoryFilter() {
        const categories = new Set();
        document.querySelectorAll('.badge').forEach(badge => {
            categories.add(badge.textContent);
        });
        const categoryFilter = document.getElementById('categoryFilter');
        categories.forEach(category => {
            const option = document.createElement('option');
            option.value = category;
            option.textContent = category;
            categoryFilter.appendChild(option);
        });
    }

    document.getElementById('categoryFilter').addEventListener('change', function () {
        const selectedCategory = this.value;
        const rows = document.querySelectorAll('#productsTable tbody tr');

        rows.forEach(row => {
            const category = row.querySelector('.badge').textContent;
            const isMatch = !selectedCategory || category === selectedCategory;
            row.style.display = isMatch ? '' : 'none';
        });
    });

    // Clear filters
    function clearFilters() {
        document.getElementById('searchProducts').value = '';
        document.getElementById('categoryFilter').value = '';

        // Show all rows
        document.querySelectorAll('#productsTable tbody tr').forEach(row => {
            row.style.display = '';
        });
    }

    // Export functionality placeholder
    function exportProducts() {
        sendToast('text-info', 'Export Started', 'bi-download', 'Preparing product export...');
        // Add export logic here
    }

    deleteProduct = (id, name) => {
        sendConfirm('Delete Product?', `Do you want to delete ${name} from the products?`).then(() => {
            fetch('/admin/delete-product', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ productId: id })
            })
                .then((response) => {
                    if (!response.status) throw new Error()
                    return response.json()
                })
                .then(() => location.reload())
                .then(() => {
                    sendToast('text-success-emphasis', 'Successfully Deleted', 'bi bi-check-square', `The product (${name}) has been successfully deleted from the list.`);
                })
                .catch(() => sendToast('text-danger-emphasis', 'Something went wrong', 'bi bi-x-square', `Could not delete the product (${name})!`))
        })
    }

</script>