<section class="mt-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <div class="card bg-primary-subtle text-body shadow-md">
                    <div class="card-header bg-tertiary-subtle text-primary-emphasis text-center py-3">
                        <h3 class="mb-0">Add New Product</h3>
                    </div>
                    <div class="card-body">
                        <form action="/admin/add-product" method="POST" enctype="multipart/form-data"
                            class="needs-validation" novalidate> <!-- Name & Rate Row -->
                            <div class="row g-3 mb-3">
                                <div class="col-md-8"> <label for="name" class="form-label">Product Name</label> <input
                                        type="text" id="name" name="name" class="form-control"
                                        placeholder="Enter product name" required>
                                    <div class="invalid-feedback"> Please enter a product name. </div>
                                </div>
                                <div class="col-md-4"> <label for="rate" class="form-label">Price (â‚¹)</label> <input
                                        type="number" id="rate" name="rate" class="form-control" placeholder="0.00"
                                        min="0" step="0.01" required>
                                    <div class="invalid-feedback"> Please enter a valid price. </div>
                                </div>
                            </div> <!-- Category & Description Row -->
                            <div class="row g-3 mb-3">
                                <div class="col-md-6">
                                    <label for="category" class="form-label">Category</label>
                                    <select id="category" name="category" class="form-select" required>
                                        <option value="" disabled selected>Select category</option>
                                        <option>Electronics</option>
                                        <option>Clothing</option>
                                        <option>Home & Garden</option>
                                        <option>Books</option>
                                        <option>Other</option>
                                    </select>
                                    <div class="invalid-feedback">
                                        Please select a category.
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <label for="description" class="form-label">Short Description</label>
                                    <textarea id="description" name="description" class="form-control" rows="1"
                                        placeholder="Brief description" maxlength="100" required></textarea>
                                    <div class="form-text">Max 100 characters.</div>
                                    <div class="invalid-feedback">
                                        Please enter a description.
                                    </div>
                                </div>
                            </div>

                            <!-- Image Upload & Preview -->
                            <div class="mb-4">
                                <label for="image" class="form-label">Product Image</label>
                                <div class="d-flex align-items-center gap-3">
                                    <div class="border border-primary-subtle rounded p-1"
                                        style="width: 5em; height: 5em; overflow: hidden;">
                                        <img alt="Preview" id="displayImage"
                                            class="w-100 h-100 rounded object-fit-cover">
                                    </div>
                                    <div class="flex-grow-1">
                                        <input type="file" id="image" name="image" accept="image/*" class="form-control"
                                            onchange="updateDisplayImage(event)" required>
                                        <div class="invalid-feedback">
                                            Please upload a product image.
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Submit Button -->
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary px-5">
                                    <i class="bi bi-plus-circle me-2"></i>Confirm Add
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>